@model SadSchool.ViewModels.NewRoleViewModel

<h2>Add new Role</h2>
<form method="post" asp-controller="Users" asp-action="AddRole">
    <div asp-validation-summary="ModelOnly"></div>
    <div>
        <label asp-for="RoleName"></label><br />
        <input asp-for="RoleName" />
        <span asp-validation-for="RoleName"></span>
    </div>
    <div>
        <input type="submit" value="Create" />
    </div>
</form>