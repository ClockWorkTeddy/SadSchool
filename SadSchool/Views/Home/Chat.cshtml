@page
<div class="container" style="border:solid; border-radius: 15px; border-width: 1px">
    <div class="row">
        <div class="col-9">
            <div class="row p-1">
                <div class="col-2 h4-sad" style="max-width: 120px">User</div>
                <div class="col-10"><input class="input-sad blinker-sad" type="text" id="userInput" /></div>
            </div>
            <div class="row p-1">
                <div class="col-2 h4-sad" style="max-width: 120px">Message</div>
                <div class="col-10"><input class="input-sad blinker-sad w-100" type="text" id="messageInput" /></div>
            </div>
        </div>
        <div class="col-3">
            <input class="btn btn-sad btn-main-sad blinker-sad" style="margin-top: 15px; margin-left: 15px" type="button" id="sendButton" value="Send Message" />
        </div>

    </div>
    <div class="row p-1">
        <div class="col-6">
            <hr />
        </div>
    </div>
    <div class="row p-1">
        <div class="col-6">
            <ul id="messagesList"></ul>
        </div>
    </div>
</div>
<script src="~/js/signalr/dist/browser/signalr.js"></script>
<script src="~/js/chat.js"></script>