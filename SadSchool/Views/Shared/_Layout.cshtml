@inject SadSchool.Contracts.INavigationService NavigationService
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SadSchool</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/icons.css" asp-append-version="true" />

</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-2">
                @if(ViewContext?.RouteData?.Values["action"]?.ToString() != "Index")
                {
                    <a class="btn btn-sad btn-sub-service-sad blinker-sad"
                       asp-controller="@NavigationService.Controller" asp-action="@NavigationService.Action"
                       role="button"
                        style="display: flex; align-items: center; justify-content: center; 
                               margin-top: 20px;font-size:28px">
                        <i class="icon-back" style="margin-top: -2px;
                                                margin-left: -4px"> </i>  
                    </a>
                }
            </div>
            <div class="col-8">
                <h1 class="text-center blinker-sad h1-sad display-1">WHY SO SAD?</h1>
            </div>
            <div class="col-2" style="display:flex;">
                <div class="container" style="display:flex; align-items:center; 
                                              justify-content: flex-end;padding-top:2px">
                    <div class = "row">
                        @if (User.Identity != null && !User.Identity.IsAuthenticated)
                        {
                            <partial name="~/Views/Account/_PartialLogIn.cshtml" />
                        }
                        else
                        {
                            <partial name="~/Views/Account/_PartialLogOut.cshtml" />
                        }
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <hr class="hr-sad" />
            </div>
        </div>
    </div>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer>
        <div class="container">
            <div class="forest-house"/>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>