@model SadSchool.ViewModels.LessonAddViewModel;

<div class="text-center blinker-sad h3-sad">
    Add new Teacher
</div>
<form method="post" asp-controller="Lesson" asp-action="AddLesson">
    <div class="container" style="padding-top:30px">
        <div class="row">
            <div class="col-12 d-flex" style="justify-content:center; align-items:center">
                <div class="container d-flex" style="flex-direction:column; align-items:center;
                                                     text-align:center; padding-block:10px">
                    <label class="blinker-sad" style="margin-top: 5px" asp-for="Date"></label>
                    <input asp-for="Date" class="input-sad blinker-sad" />
                    <span asp-validation-for="Date"></span>

                    <label class="blinker-sad" style="margin-top: 5px" asp-for="ClassId">Class</label>
                    <select asp-for="ClassId" class="input-sad blinker-sad">
                        @foreach (var _class in Model.ClassesForView)
                        {
                            <option value="@_class.Id">@_class.Name</option>
                        }
                    </select>

                    <label class="blinker-sad" style="margin-top: 5px" asp-for="SubjectId">Subject</label>
                    <select asp-for="SubjectId" class="input-sad blinker-sad">
                        @foreach (var subject in Model.SubjectsForView)
                        {
                            <option value="@subject.Id">@subject.Name</option>
                        }
                    </select>

                    <label class="blinker-sad" style="margin-top: 5px" asp-for="TeacherId">Teacher</label>
                    <select asp-for="TeacherId" class="input-sad blinker-sad">
                        @foreach (var teacher in Model.TeachersForView)
                        {
                            <option value="@teacher.Id">@teacher.FirstName @teacher.LastName</option>
                        }
                    </select>

                    <label class="blinker-sad" style="margin-top: 5px" asp-for="ScheduleId">Starts</label>
                    <select asp-for="ScheduleId" class="input-sad blinker-sad">
                        @foreach (var scedule in Model.SchedulesForView)
                        {
                            <option value="@scedule.Id">@scedule.Value</option>
                        }
                    </select>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12 d-flex" style="justify-content:center; align-items:center">
                <div>
                    <input type="submit" value="Create" class="btn btn-sad btn-service-sad blinker-sad" />
                </div>
            </div>
        </div>
    </div>
</form>