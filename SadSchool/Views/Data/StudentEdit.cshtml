@model SadSchool.ViewModels.StudentViewModel;

<div class="text-center blinker-sad h3-sad">
    Add new Class
</div>
<form method="post" asp-controller="Student" asp-action="EditStudent">
    <div class="container" style="padding-top:30px">
        <div class="row">
            <div class="col-12 d-flex" style="justify-content:center; align-items:center">
                <div class="container d-flex" style="flex-direction:column; align-items:center;
                                                     text-align:center; padding-block:10px">
                    <label class="blinker-sad" style="margin-top: 5px" asp-for="FirstName">First Name</label>
                    <input asp-for="FirstName" class="input-sad blinker-sad" />
                    <span asp-validation-for="FirstName" style="color:orange"></span>

                    <label class="blinker-sad" style="margin-top: 5px" asp-for="LastName">Last Name</label>
                    <input asp-for="LastName" class="input-sad blinker-sad" />
                    <span asp-validation-for="LastName" style="color:orange"></span>

                    <label class="blinker-sad" style="margin-top: 5px" asp-for="DateOfBirth">Date of Birth</label>
                    <input asp-for="DateOfBirth" class="input-sad blinker-sad" />
                    <span asp-validation-for="DateOfBirth" style="color:orange"></span>

                    <label class="blinker-sad" style="margin-top: 5px" asp-for="Sex">Sex</label>
                    <select asp-for="Sex" asp-items="@Model.Sexes" class="input-sad blinker-sad">
                    </select>
                    <span asp-validation-for="Sex" style="color:orange"></span>

                    <label class="blinker-sad" style="margin-top: 5px" asp-for="ClassId">Class Id</label>
                    <select asp-for="ClassId" asp-items="@Model.Classes" class="input-sad blinker-sad">
                    </select>
                    <span asp-validation-for="ClassId" style="color:orange"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12 d-flex" style="justify-content:center; align-items:center">
                <div>
                    <input type="submit" value="Save" class="btn btn-sad btn-service-sad blinker-sad" />
                </div>
            </div>
        </div>
    </div>
</form>