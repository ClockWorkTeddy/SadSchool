@model SadSchool.ViewModels.ScheduleViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/styles.css">
    <title>Document</title>
</head>
<body>
    <div class="container-fluid">
        <div class="container" style="max-width: 800px;">
             <div class="row justify-content-center" style="margin-top:30px">
                <div class="col-12 border border-dark scroll-sad" style="max-height: 800px; padding-top: 13px">
                    <table class="table table-bordered border-dark">
                        <thead>
                            <tr>
                                <th scope="col" class="h3-lght-sad blinker-sad border-dark" style="text-align:center">Day\Class</th>
                                @foreach(var _class in Model.Classes)
                                {
                                    <th scope="col" class="h3-lght-sad blinker-sad border-dark" style="text-align:center">@_class</th>
                                }
                            </tr>
                        </thead>
                        @for(int i = 0; i < Model.Days.Count; i++)
                        {
                            <tr>
                                <td class="h3-lght-sad blinker-sad border-dark" style="vertical-align: middle">
                                    <div class="blinker-sad">@Model.Days[i]</div>
                                </td>
                                @for (int j = 0; j < Model.Classes.Count; j++)
                                {
                                    <td class="td-sad" style="text-align:start">
                                        @if (Model.Cells[i, j] != null)
                                        {
                                            @foreach (var lesson in Model.Cells[i, j].LessonInfo)
                                            {
                                                <div class="blinker-sad">@lesson</div>
                                            }
                                        }
                                    </td>
                                }
                            </tr>
                        }
                    </table>
                </div>
            </div>
        </div>
    </div>
    <script src="/js/bootstrap.bundle.min.js"></script>
</body>
</html>