@model List<SadSchool.ViewModels.StudentViewModel>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/styles.css">
    <title>Document</title>
</head>
<body>
    <div class="container-fluid">
        <div class="container" style="max-width: 800px;">
            <div class="row" style="margin-top:30px">
                <div class="col-12 d-flex justify-content-center">
                    <a class="btn btn-sad btn-main-sad blinker-sad"
                       role="button"
                       style="display: flex; align-items: center; justify-content: center;"
                       asp-controller="Student" asp-action="AddStudent">Add Student</a>
                </div>
            </div>
            <div class="row justify-content-center" style="margin-top:30px">
                <div class="col-10 border border-dark scroll-sad" style="max-height: 420px; padding-top: 13px">
                    <table class="table table-bordered border-dark">
                        <thead>
                            <tr>
                                <th scope="col" class="h3-sad blinker-sad border-dark" style="width:100px">#</th>
                                <th scope="col" class="h3-sad blinker-sad border-dark">First Name</th>
                                <th scope="col" class="h3-sad blinker-sad border-dark">Last Name</th>
                                <th scope="col" class="h3-sad blinker-sad border-dark">Class</th>
                                <th scope="col" class="h3-sad blinker-sad border-dark">Date of Birth</th>
                                <th scope="col" class="h3-sad blinker-sad border-dark">Sex</th>
                                <th scope="col" class="h3-sad blinker-sad border-dark" style="width: 100px"></th>
                            </tr>
                        </thead>
                        @for (int i = 0; i < Model.Count; i++)
                        {
                            var student = Model[i];

                            <tr>
                                <td class="td-sad">
                                    <div class="blinker-sad">@student.Id</div>
                                </td>
                                <td class="td-sad">
                                    <div class="blinker-sad">@student.FirstName</div>
                                </td>
                                <td class="td-sad">
                                    <div class="blinker-sad">@student.LastName</div>
                                </td>
                                <td class="td-sad">
                                    <div class="blinker-sad">@student.ClassName</div>
                                </td>
                                <td class="td-sad">
                                    <div class="blinker-sad">@student.DateOfBirth</div>
                                </td>
                                <td class="td-sad">
                                    <div class="blinker-sad">@student.Sex</div>
                                </td>
                                <td class="td-sad">
                                    <form asp-action="DeleteStudent" asp-route-id="@student.Id" asp-controller="Student" method="post">
                                        <div class="d-flex justify-content-center">
                                            <button type="submit" class="btn btn-sad btn-service-sad blinker-sad">
                                                Delete
                                            </button>
                                        </div>
                                    </form>
                                </td>
                            </tr>
                        }
                    </table>
                </div>
            </div>
        </div>
    </div>
    <script src="/js/bootstrap.bundle.min.js"></script>
</body>
</html>